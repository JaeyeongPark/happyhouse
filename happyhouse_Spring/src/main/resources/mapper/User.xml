<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.dao.UserDAO">

	<insert id="insertUser" parameterType="UserDTO" >
		insert into user values (#{id}, #{password}, #{name}, #{email}, #{phonenumber})
	</insert>

	<update id="updateUser" parameterType="UserDTO">
		update user set password = #{password} , name = #{name}, 
		email = #{email}, phonenumber = #{phonenumber}
		where id = #{id}
	</update>
	
	<delete id="deletetUser" parameterType="string">
		delete from user where id = #{id}
	</delete>
	
	<select id="login" resultType="UserDTO" parameterType="string">
		select * 
		from user 
		where id=#{id} and password=#{password}
	</select>
	
	<select id="searchpw" resultType="String" parameterType="string">
		select password 
		from user 
		where id=#{id}
	</select>

</mapper>

